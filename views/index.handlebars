<div class="header">
  <h1>Eat Da Burger</h1>
  <img src="/assets/img/burger.jpg">
</div>


<div class="burger-menu">
  <h4>Burger Menu</h4>
  <ol>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          <p>Burger: 
          {{this.burger_name}}
          </p>

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">Devour it!</button>
          </form>
          
        </li>
      {{/unless}}
    {{/each}}
  </ol>
</div>

<div class="devoured-burgers">
  <h4>Devoured Burgers</h4>
  <ol>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          <p>Burger: 
          {{this.burger_name}}
          </p>
          <p>Eaten on:  
          {{this.updatedAt}}
          </p>
        </li>
      {{/if}}
    {{/each}}
  </ol>
</div>

<div class="footer">
  <h3>Enter a burger you want to eat and click the submit button</h3>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="" name="burger_name">
    </div>



    <button type="submit">Submit</button>
  </form>
</div>
